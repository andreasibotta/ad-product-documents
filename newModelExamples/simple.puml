@startuml
skinparam style strictuml
skinparam linetype ortho
hide empty members

/' Classes '/
class Client {
  + id: "xyz123"
  + name: "Pepsi"
}

class Budget {
   + client: "xyz123"
   + bundle: "aaa1111"
   + amount: $10,000
}

class Bundle {
  + id: "aaa111"
  + name: "Simple Bundle"
}

class AdCampaign {
  + id: "bbb222"
  + segments: int[]
    startTime: "2019-06-01"
  + passback: false
  + paceFactor: 1.0
}

abstract class AdFormat {
  + id: "ccc333"
}

class Placement {
  + uri: "offer_reward:ddd444"
  position: null
}

abstract class Goal
class BundleBudget {
}
Goal <|-- BundleBudget


class MediaAd {
  + creative: "video1"
}
AdFormat <|-- MediaAd

class RequiredFields {
  + fields: ["marketing_approval"]
}


/' Relations '/
Bundle "1" -right- "1..*" Budget
Budget "1" -right- "1..*" Client
AdCampaign "1..*" -up- Bundle
AdCampaign "1" -left- "1" AdFormat
AdCampaign "0..*" -down- "1" Placement
AdCampaign "0..*" -down- "0..2" Goal
AdFormat "1" -up- "0..*" RequiredFields

@enduml